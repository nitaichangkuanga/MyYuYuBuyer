<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ll_mainshop_h"
        android:background="@color/colorMainTitle"
        >
    <RelativeLayout
        android:id="@+id/rl_systemInfoDetails_back"
        android:layout_width="@dimen/click_login_top"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="@dimen/tv_shop_marleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            />
    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_main_qu"
        >
        <TextView
            android:id="@+id/tv_sysytemInfoDetails_content"
            android:layout_marginLeft="@dimen/tv_shop_mar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="很高兴认识你，欢迎加入鱼鱼"
            android:textColor="@color/colorroruserin"
            android:textSize="@dimen/tv_shop_size"
            android:layout_marginBottom="@dimen/iv_personal_h"
            />

        <TextView
            android:id="@+id/tv_sysytemInfoDetails_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:00:00"
            android:layout_below="@id/tv_sysytemInfoDetails_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorrorderTime"
            android:textSize="@dimen/tv_shop_size"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/tv_sysytem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sysytemInfoDetails_content"
            android:layout_toLeftOf="@id/tv_sysytemInfoDetails_time"
            android:text="2016-10-01"
            android:textColor="@color/colorrorderTime"
            android:textSize="@dimen/tv_shop_size"
            android:singleLine="true"
            android:layout_marginRight="@dimen/tv_shop_marbom"
            />
    </RelativeLayout>
</LinearLayout>
