<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_sysytem_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_shop_mar"
        android:background="@drawable/listview_selector"
        >
        <com.wushuikeji.www.yuyubuyer.view.RoundedCornerImageView
            android:id="@+id/iv_sysytem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/system"/>


        <LinearLayout
            android:id="@+id/ll_system_ll"
            android:layout_toRightOf="@id/iv_sysytem_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_main_qu"
            >
            <TextView
                android:id="@+id/tv_sysytem_sysytemInfo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="系统消息"
                android:singleLine="true"
                android:textColor="@color/colorrorder"
                android:textSize="@dimen/tv_shop_n"
                />
            <TextView
                android:id="@+id/tv_sysytem_date"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="2016-10-1"
                android:textColor="@color/colorrorderTime"
                android:textSize="@dimen/tv_shop_size"
                android:singleLine="true"
                android:gravity="right"
                android:layout_marginRight="@dimen/tv_main_qu"
                />
            <TextView
                android:id="@+id/tv_sysytem_time"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="19:00:00"
                android:textColor="@color/colorrorderTime"
                android:textSize="@dimen/tv_shop_size"
                android:singleLine="true"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_sysytem_content"
            android:layout_alignLeft="@id/ll_system_ll"
            android:layout_alignBottom="@id/iv_sysytem_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很高兴认识你，欢迎加入鱼鱼"
            android:textColor="@color/colorroruserin"
            android:textSize="@dimen/tv_shop_size"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xiangsu"
        android:background="@color/colornewsline"
        />
</LinearLayout>
